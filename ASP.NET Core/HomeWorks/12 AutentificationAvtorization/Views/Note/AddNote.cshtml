@model NoteViewModel;

<form asp-action="AddNote" method="post">
    <div>
        <label asp-for="Theme"></label>
        <input asp-for="Theme"/>
        <span asp-validation-for="Theme"></span>
    </div>

    <div>
        <label asp-for="Body"></label>
        <input asp-for="Body" />
    </div>

    <div asp-validation-summary="ModelOnly"></div>

    <button type="submit">Зберегти записку</button>

</form>

