@* @model NoteViewModel; *@
@{
    ViewData["Title"] = "Home Page";
}

    <h5 class="display-4">Welcome to HomePage of Notes!</h5>

 @if (User.Identity.IsAuthenticated)
 {
    <p>You are authenticated!</p>

    <p><a asp-action="AddNote" asp-controller="Note">Додати записку</a></p>
    <p><a asp-action="ShowNotes" asp-controller="Note">Переглянути список записок</a> </p>
    <p> <a asp-action="SignOut" asp-controller="Account">Sign out</a> </p>
 }
 else
 {
    <p>You are not authenticated!</p>

    <p><a asp-action="SignIn" asp-controller="Account">Sign in</a> </p>
    <p><a asp-action="Register" asp-controller="Account">Registration</a> </p>
 }
   



